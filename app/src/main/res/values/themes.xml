<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--

    Para deshabilitar el tema oscuro;
     * Eliminamos themes.xml (dark)
     * Agregamos la siguiente línea
       <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
     * cambiamos esta línea
       <style name="Theme.Enfermeria" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    -->

    <style name="Theme.Enfermeria" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_secondary</item>
        <!--
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
    </style>

    <style name="Theme.Enfermeria.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Enfermeria.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Enfermeria.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>